<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>tempfile.dir</param-name>
        <param-value>tmpfiles</param-value>
    </context-param>
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <param-name>detail</param-name>
            <param-value>2</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Signup</servlet-name>
        <jsp-file>/Files/Signup.jsp</jsp-file>
        <init-param>
            <param-name>Year</param-name>
            <param-value>2003,2004,2005,2006,2007,2008</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Information</servlet-name>
        <servlet-class>HelperClasses.Information</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadHandler</servlet-name>
        <servlet-class>HelperClasses.UploadHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteAccount</servlet-name>
        <servlet-class>Controller.DeleteAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPassword</servlet-name>
        <servlet-class>Controller.ResetPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SharingHandler</servlet-name>
        <servlet-class>HelperClasses.SharingHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowProfile</servlet-name>
        <servlet-class>ViewProfile.ShowProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewProfile</servlet-name>
        <servlet-class>ViewProfile.ViewProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewUploads</servlet-name>
        <servlet-class>ViewProfile.ViewUploads</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPassword</servlet-name>
        <servlet-class>Controller.ForgotPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckInternet</servlet-name>
        <servlet-class>HelperClasses.CheckInternet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FriendRequest</servlet-name>
        <servlet-class>ViewProfile.FriendRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageFriends</servlet-name>
        <servlet-class>ViewProfile.ManageFriends</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcceptFriendRequest</servlet-name>
        <servlet-class>ViewProfile.AcceptFriendRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DealingWithFriendRequests</servlet-name>
        <servlet-class>ViewProfile.DealingWithFriendRequests</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcceptingFriend</servlet-name>
        <servlet-class>ViewProfile.AcceptingFriend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancellingFriend</servlet-name>
        <servlet-class>ViewProfile.CancellingFriend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminservlet</servlet-name>
        <servlet-class>ViewProfile.adminservlet</servlet-class>
    </servlet>    
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>Controller.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AViewUploads</servlet-name>
        <servlet-class>ViewProfile.AViewUploads</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDelete</servlet-name>
        <servlet-class>Controller.AdminDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDeleteFiles</servlet-name>
        <servlet-class>Controller.AdminDeleteFiles</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminViewProfile</servlet-name>
        <servlet-class>ViewProfile.AdminViewProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminViewUploads</servlet-name>
        <servlet-class>ViewProfile.AdminViewUploads</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/Files/Signup.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Information</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadHandler</servlet-name>
        <url-pattern>/UploadHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteAccount</servlet-name>
        <url-pattern>/Delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPassword</servlet-name>
        <url-pattern>/Reset</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SharingHandler</servlet-name>
        <url-pattern>/sharing_set</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowProfile</servlet-name>
        <url-pattern>/ShowProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewProfile</servlet-name>
        <url-pattern>/ViewProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewUploads</servlet-name>
        <url-pattern>/ViewUploads</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPassword</servlet-name>
        <url-pattern>/forgot_pass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckInternet</servlet-name>
        <url-pattern>/CheckInternet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FriendRequest</servlet-name>
        <url-pattern>/friend_request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageFriends</servlet-name>
        <url-pattern>/manage_friends</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcceptFriendRequest</servlet-name>
        <url-pattern>/accept_friend_request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DealingWithFriendRequests</servlet-name>
        <url-pattern>/dealing_with_friend_requests</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcceptingFriend</servlet-name>
        <url-pattern>/accept_friend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancellingFriend</servlet-name>
        <url-pattern>/cancel_friend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminservlet</servlet-name>
        <url-pattern>/adminservlet</url-pattern>
    </servlet-mapping>    
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/AdminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDelete</servlet-name>
        <url-pattern>/AdminDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDeleteFiles</servlet-name>
        <url-pattern>/AdminDeleteFiles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminViewProfile</servlet-name>
        <url-pattern>/AdminViewProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AViewUploads</servlet-name>
        <url-pattern>/AViewUploads</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/struts-bean.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-bean.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/struts-html.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-html.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/struts-logic.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-logic.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/struts-nested.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-nested.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/struts-tiles.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-tiles.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>
